<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
        x:Class="CryBarEditor.Prompt" WindowStartupLocation="CenterOwner"
		DataContext="{Binding RelativeSource={RelativeSource Self}}"
		CanResize="False" Width="300" Height="150"
        Title="Prompt">
	<Border Padding="5">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="40" />
			</Grid.RowDefinitions>
			<DockPanel Grid.Row="0">
				<Image DockPanel.Dock="Left" Stretch="Uniform" Width="55"
					   Margin="5,5,8,0"
					   VerticalAlignment="Top"
					   Source="resm:Avalonia.Skia.Assets.NoiseAsset_256X256_PNG.png?assembly=Avalonia.Skia" />
		
				<TextBlock Text="Prompt message" 
						   Margin="0,5,0,0"
						   VerticalAlignment="Top"
						   TextWrapping="Wrap" />
			</DockPanel>
			<DockPanel Grid.Row="1" Margin="5,5,5,0" LastChildFill="False">
				<Button DockPanel.Dock="Right" Content="Close" />
			</DockPanel>
		</Grid>
	</Border>
</Window>
